# Production Environment Configuration

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
API_URL=https://api.yourcarwash.com
WEB_URL=https://yourcarwash.com

# Database (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
DATABASE_URL=your_database_url

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_key_change_this
JWT_EXPIRES_IN=7d

# Stripe Payment
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Tabby & Tamara (BNPL)
TABBY_MERCHANT_CODE=your_tabby_merchant_code
TABBY_PUBLIC_KEY=your_tabby_public_key
TABBY_SECRET_KEY=your_tabby_secret_key
TAMARA_API_URL=https://api.tamara.co
TAMARA_API_TOKEN=your_tamara_token

# Email (SendGrid/SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key
EMAIL_FROM=noreply@yourcarwash.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# Redis
REDIS_URL=redis://redis:6379

# Monitoring (Sentry)
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://yourcarwash.com

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Session
SESSION_SECRET=your_production_session_secret
